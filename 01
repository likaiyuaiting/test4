#include<stdio.h>

void SelectSort(int *arr,int sz)
{
    int mark,i,j;
    for(i=0; i<sz-1; i++)
    {
        mark = i;
        for(j=i+1; j<sz; j++)
        {
            if(arr[j] < arr[mark])
                mark = j;
        }
        if(mark != i)
        {
            int tmp = arr[mark];
            arr[mark] = arr[i];
            arr[i] = tmp;
        }
    }
}

int main()
{
    int i;
    int arr[] = {8,3,4,6,9,7,2,1};
    int sz = sizeof(arr)/sizeof(arr[0]);

    SelectSort(arr,sz);

    for(i=0; i<sz; i++)
        printf("%d ",arr[i]);
    return 0;
}
